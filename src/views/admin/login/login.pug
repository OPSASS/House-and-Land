#particles-js

#main-wrapper.container
  .row.justify-content-center
      .col-xl-10
          .row
            .col-lg-6
              .p-5
                .mb-8
                  .h2.font-weight-bold.text-theme Admin Login
                .h5.mb-0 Welcome back!
                p.text-muted.mt-2.mb-5 Nhập tên đăng nhập và mật khẩu để truy cập trang quản trị.
                form(action="/admin/login", method="post") 
                  .form-group
                    label(for='username') Tên đăng nhập
                    input#username.form-control(type='text' name='username' required)
                  .form-group.mb-5
                    label(for='password') Mật khẩu
                    input#password.form-control(type='password' name='password' required)
                  button.btn.btn-primary(type='submit') Đăng nhập
                  a.forgot-link.float-end.text-primary(href='/auth/reset') Quên mật khẩu?
            .col-lg-6.d-none.d-lg-inline-block
                .overlay.rounded-right
                  img(src="/img/blockchain-platform-5226944-4363132.png")
                  
script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js") 