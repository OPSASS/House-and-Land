                      else
                        .dropclick.an(onclick="Dropclick()") Thêm thông tin
                          i.bx.bx-chevron-down
                          .dropclick-content#Dropclick
                            if user.name
                              a(href="/user/"+user._id) Thông tin cá nhân
                              a(href='/auth/logout') ĐĂNG XUẤT
                            else 
                              a(href="/user/"+user._id) Thêm thông tin
                              a(href='/auth/logout') ĐĂNG XUẤT
              else
                a(href="/auth/login").post.cham  ĐĂNG BÀI
                p(style="margin:0 10px") |
                a.loginus(href="/auth/login")
                  .giuangang 
                    i.bx.bxs-user-circle.bx-md(style="margin-right: 5px;")
                    p(style="color: #999999") ĐĂNG NHẬP
