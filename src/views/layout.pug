      .navtop.chuxam.font2
        .container
          .allnav
            .logo
              a(href="/").font3.cham.chuxam HOUSE AND LANDS
            .font2.navbar-layout
              .dropdown
                a.nhanh(href="/" class=(title == 'Home') ? 'active' : null) Home
              .dropdown
                a.nhanh(href="/" class=(title == 'Mua & Thuê') ? 'active' : null) Mua & Bán
                .dropdown-content.animate__animated.animate__bounceIn
                  a(href="/mua-ban/mua-ban-nha") Mua bán nhà
                  a(href="/mua-ban/mua-nha-mat-pho") Mua nhà mặt phố 
                  a(href="/mua-ban/mua-can-ho-chung-cu") Mua căn hộ chung cư
                  a(href="/mua-ban/mua-can-ho-villa") Mua căn hộ, villa 
                  a(href="/mua-ban/mua-kho-nha-suong") Mua kho, nhà sưởng 
                  a(href="/mua-ban/mua-mat-bang") Mua mặt bằng
              .dropdown
                a.nhanh(href="/" class=(title == 'Dự án') ? 'active' : null) Cho Thuê
                .dropdown-content.animate__animated.animate__bounceIn
                  a(href="/cho-thue/thue-can-ho-chung-cu") Thuê căn hộ chung cư      
                  a(href="/cho-thue/thue-mat-bang") Thuê mặt bằng   
                  a(href="/cho-thue/thue-van-phong") Thuê văn phòng
                  a(href="/cho-thue/thue-nha-tro") Thuê nhà trọ 
                  a(href="/cho-thue/thue-cua-hang") Thuê cửa hàng 
                  a(href="/cho-thue/thue-kho-nha-suong") Thuê kho, nhà sưởng
                  
              .dropdown
                a.nhanh(href="/" class=(title == 'Chung cư') ? 'active' : null) Sang nhượng
                .dropdown-content.animate__animated.animate__bounceIn
                  a(href="/sang-nhuong/sang-nhuong-dat") Sang nhượng đất
                  a(href="/sang-nhuong/sang-nhuong-nha-rieng") Sang nhượng nhà riêng
                  a(href="/sang-nhuong/sang-nhuong-can-ho-chung-cu") Sang nhượng căn hộ chung cư
                  a(href="/sang-nhuong/sang-nhuong-cua-hang") Sang nhượng cửa hàng 

              .dropdown
                a.nhanh(href="/" class=(title == 'Thổ cư') ? 'active' : null) Thổ cư
                .dropdown-content.animate__animated.animate__bounceIn
                  a(href="/tho-cu/mua-ban-dat") Mua bán đất 
                  a(href="/tho-cu/dat-cho-thue") Đất cho thuê 
                  a(href="/tho-cu/dat-tho-cu") Đất thổ cư
                  a(href="/tho-cu/dat-nen-du-an") Đất nền dự án 
                  a(href="/tho-cu/dat-canh-tac") Đất canh tác

              .dropdown
                a.nhanh(href="/" class=(title == 'Danh bạ ') ? 'active' : null) Danh bạ
                .dropdown-content.animate__animated.animate__bounceIn
                  a(href="/danh-ba/nha-moi-gioi") Nhà môi giới
                  a(href="/danh-ba/doanh-nghiep") Doanh nghiệp 
            .ntr
              if user 
                a(href="/posts/dang-tin-bds").post.cham  ĐĂNG BÀI
                p(style="margin:0 10px") |
                .loginus
                  if user.profilePicture
                    img.avtus(src=user.profilePicture)
                    .users 
                      if user.username 
                        .dropclick.an(onclick="Dropclick()")= user.username
                          i.bx.bx-chevron-down
                          .dropclick-content#Dropclick
